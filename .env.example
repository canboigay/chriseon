# Core
CHRSEON_ENV=dev

# Postgres
DATABASE_URL=postgresql+psycopg://chriseon:chriseon@localhost:5432/chriseon

# Redis
REDIS_URL=redis://localhost:6379/0

# Encryption key for stored provider keys (BYOK + managed)
# Generate 32 bytes base64 (example): `python3 -c "import os,base64; print(base64.b64encode(os.urandom(32)).decode())"`
KEY_ENCRYPTION_MASTER_KEY_B64=

# Optional platform-managed keys (used when BYOK absent or run forces managed)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
XAI_API_KEY=

# Web
# Use 8090 by default to avoid clashes with other local services.
NEXT_PUBLIC_API_BASE_URL=http://localhost:8090
